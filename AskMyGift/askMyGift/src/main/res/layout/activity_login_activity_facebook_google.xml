<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.32"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_weight="0.39"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:textIsSelectable="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:background="@android:color/transparent"
        android:layout_gravity="center|top"
        android:gravity="center_vertical|center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
             android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="gifting made meaningful"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="@color/white"
                />

		 <com.facebook.widget.LoginButton
		     xmlns:fb="http://schemas.android.com/apk/res-auto"
		     android:id="@+id/fb_login_button"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center"
		     android:background="#3b5998"
		     android:gravity="center_vertical|center_horizontal" />
		   <!--  facebook:confirm_logout="false"
		     facebook:fetch_user_info="true"
		     fb:login_text="Sign in with Facebook"  -->

            <com.google.android.gms.common.SignInButton
                android:id="@+id/gplus_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" 
                android:gravity="center_vertical|center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up With Mobile"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal"
                android:background="#f4b400"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_left"
                android:clickable="true"
                android:onClick="openMobileRegisterActivity"
                android:textStyle="bold"
                 />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="By registering, you confirm that you accept our Terms and Conditions and Privacy Policy"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="AskMyGift. All Rights Reserved"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:gravity="bottom"
        android:textColor="@color/white" />

</LinearLayout>