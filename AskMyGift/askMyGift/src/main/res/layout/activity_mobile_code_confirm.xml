<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="150dp"
    >
    <TextView  
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="check"
        android:textSize="30sp"/>
    
    
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="We have sent you an SMS with Code to the shared number. To complete you Phone number verification, please enter a 6-digit activation code."
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/mobileCode"
            android:textColor="@color/white"
            android:background="#7388656b"
             android:hint="Enter Code Here"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" />
        
        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg"
            android:textColor="@color/white"/>
        
        
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submitCode"
            android:layout_below="@+id/countryCode"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:onClick="confirmCodeOpenRegister"
            />

   </LinearLayout>

</LinearLayout>